extends ../layout

block content
	.container
		.row
			.col-md-12 &nbsp;
		.row
			.col-md-10.col-md-offset-1
				.row
					.col-md-12
						.panel.panel-primary(ng-controller="groupChatCtrl")
							.panel-heading(style="padding: 0 0 0 8px;")
								span.glyphicon.glyphicon-user
								h6.panel-title(style="display:inline;") Chat
								.btn-group.btn-group-xs.pull-right
									button.btn.btn-primary(type="button")
										span.glyphicon.glyphicon-lock
									button.btn.btn-primary(type="button")
										span.glyphicon.glyphicon-cog
									button.btn.btn-primary(type="button")
										span.glyphicon.glyphicon-remove
								.clearfix
							.panel-body(style="padding: 0 4px;")
								.row
									.col-xs-12(style="max-height:300px;max-width:100%;overflow-y:auto;overflow-x:hidden;")
										table.table.table-hover.table-condensed
											tr(ng-hide="chatMessages.length === 0", ng-repeat="chat in chatMessages | orderBy:origDt | reverse", style="min-width:100%;max-width:100%;width:100%;")
												td:img(src="{{chat.icon}}" alt="" style="margin-top:8px;")
												td:h6 {{chat.username}}
												td:p(style="word-wrap: break-word")
													small {{chat.text}}
											tr(ng-show="chatMessages.length === 0")
												td:p Nothin' here.
													strong Say sth!
							.panel-footer
								form
									.input-group.input-group-sm
										span.input-group-addon
											img(src="http://placehold.it/16x16" alt="")
										input(type="text" class="form-control" ng-model="newChatMsg" placeholder="...")
										span.input-group-btn
											button.btn.btn-primary(type="submit" ng-click="addChat()") Send

